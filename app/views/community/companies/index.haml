= provide :title, 'Companies'
= provide :description, ''
= provide :keywords, ''

%section{id: 'content'}
  .container
    .row
      .col-md-12

        .row
          .col-md-12
            %h2{class: 'bold text-center'} Explore Companies Hiring Developers
            %p{class: 'text-center'}
              Discover and Connect with <span class='bold'>#{@companies_count}</span>
              Leading Companies in the Ruby and<br> Rails Community
              %br

              .row
                .col-md-offset-4.col-md-4
                  = search_form_for(@q, { url: community_companies_path }) do |f|

                    %br
                    .field
                      .input-group
                        = f.search_field :name_cont, class: 'form-control',
                        class: 'form-control', placeholder: 'Search company...'
                        .input-group-addon
                          %i{class: 'fa-solid fa-search'}
        %br
        .row
          .col-md-12
            .row
              .col-md-12{class: 'text-center'}
                %h4{class: 'bold uppercase'}
                  Filter by
                %ul{class: 'list-unstyled list-inline text-center'}
                  %li
                    = link_to community_companies_path(),
                    class: 'btn btn-default btn-lg' do
                      %i{clasS: 'fa-solid fa-industry ico'}
                      All
                  %li
                    = link_to community_companies_path(q: {kind_eq: 1}),
                    class: 'btn btn-default btn-lg' do
                      %i{class: 'fa-solid fa-industry ico'}
                      Companies
                  %li
                    = link_to community_companies_path(q: {kind_eq: 2}),
                    class: 'btn btn-default btn-lg' do
                      %i{class: 'fa-solid fa-rocket ico'}
                      Startups

            %br
            .row
              = render partial: 'company', collection: @companies

              .col-md-12{class:'text-center'}
                = paginate(@companies)
