= provide :title, 'Refer'
= provide :description, ''
= provide :keywords, ''

%section{id: 'content'}
  .container
    .row
      .col-md-8.col-md-offset-2

        .row
          .col-md-12
            .panel.panel-default
              .panel-body
                %ul{class: 'list-unstyled list-inline'}
                  %li
                    %h3{class: 'bold'}
                      Refer
                  %li{class: 'pull-right mtop'}
                    = link_to '', style: 'margin-left: 12px;' do
                      %i{class: 'fa-solid fa-ellipsis-vertical'}
                  %li{class: 'pull-right mtop'}
                    = link_to '' do
                      %i{class: 'fa-regular fa-copy ico'}
                      Copy link
                  %li{class: 'pull-right mtop'}
                    %span{id: 'code'}
                      %i{class: 'fa-solid fa-link ico'}
                      = current_user.referral_link

        .row
          .col-md-12
            .panel.panel-default
              .panel-body
                %ul{class: 'nav nav-pills'}
                  %li{role: 'presentation', class: 'active'}
                    = link_to do
                      Refer Talent
                  %li
                    = link_to '#' do
                      Handbook

        .row
          .col-md-12
            .panel.panel-default
              .panel-body
                .col-md-12
                  %h4{class: 'bold'} Talent overview

                %br
                .col-md-12
                  .progress
                    .progress-bar{role: 'progressbar', 'aria-valuenow': '60',
                    'aria-valuemin': '0', 'aria-valuemax': '100', style: 'width: 60%;'}
                      ="#{60}%"

                .col-md-12
                  .row
                    .col-md-4.col-sm-4{class: 'analytics'}
                      %p
                        %i{class: 'fa-solid fa-circle signup'}
                        Signed up
                      %h2{class: 'bold'}= rand(100)
                    .col-md-4.col-sm-4{class: 'analytics'}
                      %p
                        %i{class: 'fa-solid fa-circle completed'}
                        Completed profile
                      %h2{class: 'bold'}= rand(100)
                    .col-md-4.col-sm-4{class: 'analytics'}
                      %p
                        %i{class: 'fa-solid fa-circle hired'}
                        Hired
                      %h2{class: 'bold'}= rand(100)