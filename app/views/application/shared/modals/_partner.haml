.modal.fade{id: 'partnershipModal', :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header{style: 'margin-bottom: -10px;'}
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—

        %i{class: 'fa-solid fa-clock icon pull-left', style: 'font-size: 30px; margin-top: 8px; margin-right: 10px;'}
        %h4.modal-title{class: 'bold'} Partnership Program
        %p Become a partner
      = form_for(Marketing::Partner.new) do |f|
        .modal-body{style: 'padding: 25px;'}

          .field
            = f.label :name, 'Name'
            = f.text_field :name, class: 'form-control', required: 'required',
            placeholder: 'Name', autocomplete: 'off'
          .field
            = f.label :kind, 'Partnership Program'
            = f.select(:kind, Marketing::Partner.kinds.keys,
            { included_blank: 'Select partnership type'},
            {class: 'form-control'})
          .field
            = f.label :url_path, 'URL'
            = f.text_field :url_path, class: 'form-control', required: 'required',
            placeholder: 'Website or social network', autocomplete: 'off'

        .modal-footer
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
          %button.btn.btn-primary{:type => "button"} Save changes
