%header
  %nav.navbar.navbar-default
    .container.container-fluid
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle.collapsed{"aria-expanded" => "false", 
        "data-target" => "#bs-example-navbar-collapse-1", 
        "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{:href => root_path, class: 'bold'} 
          = image_tag('logo.jpg', class: 'logo')
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li.dropdown
            = link_to 'https://www.meetup.com/topics/ruby/pl/' do
              %i{class: 'fa-solid fa-people-group ico'}
              Meetups
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", 
            "data-toggle" => "dropdown", :href => "#", :role => "button"}
              %i{class: 'fa-brands fa-discourse'}
              Discuss
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to 'https://forum.rubyonrails.pl/' do
                  %i{class: 'fa-brands fa-discourse ico'}
                  Forum
              %li
                = link_to 'https://discord.com/invite/bUV9u3PSPF' do
                  %i{class: 'fa-brands fa-discord ico'}
                  Discord
          %li.dropdown.hide
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", 
            "data-toggle" => "dropdown", :href => "#", :role => "button"}
              %i{class: 'fa-solid fa-briefcase ico'}
              Get Hired
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to community_companies_path do
                  %i{class: 'fa-solid fa-briefcase ico'}
                  Companies
              %li
                = link_to content_jobs_path do
                  %i{class: 'fa-solid fa-briefcase ico'}
                  Jobs

        %ul.nav.navbar-nav.navbar-right.hide
          - if !current_user
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", 
              "data-toggle" => "dropdown", :href => "#", :role => "button"}
                Companies
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to new_user_session_path do
                    Sign In
                %li
                  = link_to new_user_registration_path do
                    Sign Up
          - else
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", 
              "data-toggle" => "dropdown", :href => "#", :role => "button"}
                = image_tag(current_user.default_avatar, class: 'logo')
                #{current_user.name}
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to content_jobs_path(q: { user_name_eq: current_user.name }) do
                    %i{class: 'fa-solid fa-briefcase ico'}
                    My Jobs
                %li
                  = link_to edit_registration_path(current_user) do
                    %i{class: 'fa-regular fa-circle-user ico'}
                    Account
                %li
                  = link_to destroy_user_session_path,
                    method: :delete do
                    %i{class: 'fa-solid fa-power-off ico'}
                    Log Out
          %li
            = link_to 'https://discord.com/invite/bUV9u3PSPF',
            class: 'btn btn-primary btn-md btn-rop discord' do
              %i{class: 'fa-brands fa-discord ico'}
              Join our Discord
