!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title PLRUG | #{ yield :title }
    %meta{content: "width=device-width,initial-scale=1", name: "viewport"}
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_importmap_tags
    %script{:crossorigin => "anonymous", src: 'https://kit.fontawesome.com/5165849ba2.js'}
    = render partial: 'application/addons/cookie_yes'
    = render partial: 'application/addons/crisp_chat'
  %body{:class => "#{controller.controller_name}"}
    = render partial: 'layouts/header'
    = render partial: 'shared/banner'
    = yield
    = render partial: 'layouts/footer'
