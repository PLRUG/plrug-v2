= provide :title, 'Register'

%section
  .container
    .row
      .col-md-12

        .col-md-4.col-md-offset-4
          .panel.panel-default{id: 'sessionComponent'}
            .panel-body
              %h2{class: 'bold text-center'} Sign up
              %p{class: 'text-center'} Create your company account.
              %hr

              = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                = f.error_notification
                .form-inputs
                  = f.input :name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: 'Name', class: 'form-control', placeholder: 'Name'}
                  = f.input :email,
                    required: true,
                    label: 'E-mail',
                    input_html: { autocomplete: "email", class: 'form-control', placeholder: 'E-mail'}
                  = f.input :password,
                    required: true,
                    label: 'Password',
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password",
                    class: 'form-control', placeholder: 'Password' }
                  = f.input :password_confirmation,
                    label: 'Password confirmation',
                    required: true,
                    input_html: { autocomplete: "new-password",
                    class: 'form-control', placeholder: 'Password confirmation'}
                %br
                .form-actions
                  = f.button :submit, "Sign up",
                  class: 'btn btn-primary btn-rop full-width'

              .divider
                or

              = link_to user_github_omniauth_authorize_path, method: :post,
                class: 'btn btn-default btn-lg full-width',
                style: 'margin-top: 8px;' do
                %i{class: 'fa-brands fa-github ico'}
                Signup with Github

              %hr
              .text-center
                = render "devise/shared/links"
